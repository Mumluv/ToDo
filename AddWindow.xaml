<Window x:Class="ToDo.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        Title="Add Task" Height="300" Width="400">
    <Grid Background="Bisque">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>

        <Label Content="Название задачи" Grid.Row="0" Margin="10" FontSize="16"/>
        <TextBox x:Name="txt1" Grid.Row="1" Margin="10" BorderThickness="2" BorderBrush="Black"/>

        <Label Content="Описание" Grid.Row="2" Margin="10" FontSize="16"/>
        <TextBox x:Name="txt2" Grid.Row="3" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" BorderThickness="2" BorderBrush="Black" Margin="10"/>

        <Button Content="Добавить задачу" Grid.Row="6" HorizontalAlignment="Center" Margin="10"  Background="BurlyWood" Foreground="Black" FontSize="14" Click="Button_Click"/>
    </Grid>
</Window>
